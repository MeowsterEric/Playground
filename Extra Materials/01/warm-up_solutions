# warm-up exercises
# 1.
echo Warm-up 1
head -n 3 hockey_stats.txt
# -n 3 display 3 lines from head

echo

# 2.
echo Warm-up 2
echo Number of lines: `wc -l hockey_stats.txt`
echo Number of words: `wc -w hockey_stats.txt`

echo

# 3.
echo Warm-up 3
sort -rk 5 hockey_stats.txt
# sort by default is accending order
# -r reversing order
# -k 5 fifth column

echo

# 4.
echo Warm-up 4
grep TOR hockey_stats.txt
grep SJS hockey_stats.txt

echo

# 5.
echo Warm-up 5
cut -f 1 hockey_stats.txt > players.txt
# -f 1 extract field (column) number 1
# > direct std output to a file
